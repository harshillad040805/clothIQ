<html>
<head>
    <meta charset="UTF-8">
    <title>Your Wishlist</title>
    <style>
        .wishlist-container {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    width: 90%;
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
}

.wishlist-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.wishlist-item {
    border: 1px solid #ccc;
    padding: 15px;
    border-radius: 10px;
    width: 200px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.wishlist-item img {
    width: 100%;
    border-radius: 8px;
}

.wishlist-item button {
    margin-top: 10px;
    padding: 8px 12px;
    border: none;
    background: #007bff;
    color: white;
    border-radius: 5px;
    cursor: pointer;
}

    </style>
</head>
<body>
    <div class="wishlist-container">
        <h1>Your Wishlist</h1>
        <div class="wishlist-grid">
            <% wishlist.forEach(item => { %>
                <div class="wishlist-item">
                    <img src="<%= item.image %>" alt="<%= item.item %>">
                    <h3><%= item.item %></h3>
                    <p><%= item.price %></p>
                    <button>Add to Cart</button>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
